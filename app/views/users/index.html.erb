<h1>Users</h1>

<ul>
  <% @users.each do |user| %>
    <li class="user-card flex">
      <div>
        <img src="<%= user.photo %>" alt="<%= user.name %>'s photo">
      </div>
      <div>
        <h2>
          <%= user.name %>
        </h2>
        <p>Number of posts: <%= user.posts.count %>
        </p>
      </div>
    </li>
    <% end %>
</ul>