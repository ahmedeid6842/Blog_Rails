<section class="text-light mt-5">

    <h2 class="mb-4">Create New Post</h2>

    <%= form_with model: @post do |form| %>

        <div class="mb-3">
            <% form.label :title %>
                <%= form.text_field :title, class:"form-control", placeholder:"Enter the Title of the Post" %>
        </div>

        <div class="mb-3">
            <% form.label :text %>
                <%= form.text_field :text, class:"form-control", placeholder:"Enter the Text of the Post" %>
        </div>

        <div>
            <%= form.submit class:'btn btn-primary' %>
        </div>

        <% end %>
</section>